extends ../layout.jade

block content         

    div.row
        div.one.column
            | Year
        div.one.column
            | Term
        div.two.columns
            | Course
        div.three.columns
            | Instructor
        div.four.columns
            | Ratings        

    each item in courses
        div.row
            div.one.column
                include field_year
            div.one.column
                include field_term
            div.two.columns
                b
                 a(href="/course/list/"+item['Subject']+"/"+item['Course'])
                    = item['Subject'] + ' ' + item['Course']
            div.three.columns
                include field_instructors
            div.four.columns
                include field_ratings

